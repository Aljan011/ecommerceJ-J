generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// =====================
// USERS
// =====================
model User {
  id          String   @id @default(uuid())
  name        String?
  email       String?  @unique(map: "User_email_key")
  password    String?
  loginMethod String   @default("NORMAL")
  userType    String   @default("USER")
  role        String   @default("USER")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  cartItems     CartItem[]
  cartHistories CartHistory[]
  orders        Order[]
}

// =====================
// CATEGORIES
// =====================
model Category {
  id          String   @id @default(uuid())
  name        String   @unique
  description String
  imageUrl    String?
  createdAt   DateTime @default(now())

  products Product[]
}

// =====================
// PRODUCTS
// =====================
model Product {
  id          String   @id @default(uuid())
  name        String
  description String?
  imageUrl    String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  categoryId String
  category   Category @relation(fields: [categoryId], references: [id])

  variants Variant[]
}

// =====================
// VARIANTS
// =====================
model Variant {
  id        String   @id @default(uuid())
  name      String
  price     Float
  stock     Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  productId String
  product   Product @relation(fields: [productId], references: [id])

  cartItems        CartItem[]
  orderItems       OrderItem[]
  cartHistoryItems CartHistoryItem[]
}

// =====================
// CART ITEMS
// =====================
model CartItem {
  id              String   @id @default(uuid())
  quantity        Int      @default(1)
  addedAt         DateTime @default(now())
  priceAtPurchase Float?

  userId String?
  user   User?   @relation(fields: [userId], references: [id])

  guestId String?

  variantId String
  variant   Variant @relation(fields: [variantId], references: [id])

  @@unique([userId, variantId])
  @@unique([guestId, variantId])
}

// =====================
// CART HISTORY
// =====================
model CartHistory {
  id        String   @id @default(uuid())
  status    String
  createdAt DateTime @default(now())

  userId String
  user   User   @relation(fields: [userId], references: [id])

  guestId String?

  orderId String?
  order   Order?  @relation(fields: [orderId], references: [id])

  items CartHistoryItem[]
}

model CartHistoryItem {
  id              String @id @default(uuid())
  quantity        Int
  priceAtPurchase Float?

  cartHistoryId String
  cartHistory   CartHistory @relation(fields: [cartHistoryId], references: [id])

  variantId String
  variant   Variant @relation(fields: [variantId], references: [id])
}

// =====================
// ORDERS
// =====================
model Order {
  id          String   @id @default(uuid())
  totalAmount Float
  status      String   @default("PENDING")
  createdAt   DateTime @default(now())

  userId String
  user   User   @relation(fields: [userId], references: [id])

  guestId String?

  shippingName    String
  shippingAddress String
  shippingPhone   String

  paymentMethod String?
  transactionId String?
  paidAt        DateTime?

  items         OrderItem[]
  cartHistories CartHistory[]
}

// =====================
// ORDER ITEMS
// =====================
model OrderItem {
  id              String @id @default(uuid())
  quantity        Int
  priceAtPurchase Float

  orderId String
  order   Order  @relation(fields: [orderId], references: [id])

  variantId String
  variant   Variant @relation(fields: [variantId], references: [id])
}
