generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

///////////////////////
// USERS
///////////////////////
model User {
  id          String  @id @default(uuid())
  name        String?
  email       String? @unique
  password    String?
  loginMethod String  @default("NORMAL")
  userType    String  @default("USER")
  role        String  @default("USER")

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?

  cartItems     CartItem[]
  cartHistories CartHistory[]
  orders        Order[]
}

model GuestUser {
  id String @id

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?

  cartItems CartItem[]
}

///////////////////////
// CATEGORIES
///////////////////////
model Category {
  id          String  @id @default(uuid())
  name        String  @unique
  description String
  imageUrl    String?

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?

  products Product[]
}

///////////////////////
// PRODUCTS
///////////////////////
model Product {
  id          String    @id @default(uuid())
  name        String
  description String?
  imageUrl    String?
  
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  deletedAt   DateTime?

  categoryId String
  category   Category @relation(fields: [categoryId], references: [id], onDelete: Cascade)

  variants Variant[]

  images     ProductImage[]
  commonUses ProductCommonUse[]
  features   ProductFeature[]
  faqs       ProductFAQ[]
  conclusion ProductConclusion?
}

///////////////////////
// MULTIPLE IMAGES
///////////////////////
model ProductImage {
  id        String  @id @default(uuid())
  url       String
  productId String

  product   Product @relation(fields: [productId], references: [id], onDelete: Cascade)

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?
}

///////////////////////
// COMMON USES
///////////////////////
model ProductCommonUse {
  id        String  @id @default(uuid())
  text      String
  productId String
  product   Product @relation(fields: [productId], references: [id], onDelete: Cascade)
}

///////////////////////
// FEATURES
///////////////////////
model ProductFeature {
  id          String  @id @default(uuid())
  feature     String
  description String
  productId   String
  product     Product @relation(fields: [productId], references: [id], onDelete: Cascade)
}

///////////////////////
// FAQ
///////////////////////
model ProductFAQ {
  id        String  @id @default(uuid())
  q         String
  a         String
  productId String
  product   Product @relation(fields: [productId], references: [id], onDelete: Cascade)
}

///////////////////////
// CONCLUSION
///////////////////////
model ProductConclusion {
  id        String  @id @default(uuid())
  text      String
  productId String  @unique
  product   Product @relation(fields: [productId], references: [id], onDelete: Cascade)
}

///////////////////////
// VARIANTS
///////////////////////
model Variant {
  id        String    @id @default(uuid())
  name      String
  productId String
  product   Product   @relation(fields: [productId], references: [id], onDelete: Cascade)
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?

  colors VariantColor[]
}

///////////////////////
// COLORS
///////////////////////
model Color {
  id        String   @id @default(uuid())
  name      String   @unique
  hex       String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  deletedAt DateTime?

  variants VariantColor[]
}

///////////////////////
// VARIANT COLORS
///////////////////////
model VariantColor {
  id    String @id @default(uuid())

  variantId String
  variant   Variant @relation(fields: [variantId], references: [id], onDelete: Cascade)

  colorId String
  color   Color  @relation(fields: [colorId], references: [id], onDelete: Cascade)

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?

  packPrices VariantColorPackPrice[]
}

///////////////////////
// PACK SIZES & PRICING
///////////////////////
model VariantColorPackPrice {
  id       String @id @default(uuid())
  packSize Int
  price    Float
  stock    Int

  variantColorId String
  variantColor   VariantColor @relation(fields: [variantColorId], references: [id], onDelete: Cascade)

  cartItems        CartItem[]
  orderItems       OrderItem[]
  cartHistoryItems CartHistoryItem[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  deletedAt DateTime?
}

///////////////////////
// CART ITEMS
///////////////////////
model CartItem {
  id              String @id @default(uuid())
  quantity        Int    @default(1)
  priceAtPurchase Float?

  userId String?
  user   User?   @relation(fields: [userId], references: [id], onDelete: Cascade)

  guestId String?
  guest   GuestUser? @relation(fields: [guestId], references: [id], onDelete: Cascade)

  variantColorPackPriceId String
  variantColorPackPrice   VariantColorPackPrice @relation(fields: [variantColorPackPriceId], references: [id], onDelete: Cascade)

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?
}

///////////////////////
// CART HISTORY
///////////////////////
model CartHistory {
  id     String @id @default(uuid())
  status String

  userId  String?
  user    User?   @relation(fields: [userId], references: [id], onDelete: Cascade)
  guestId String?

  orderId String?
  order   Order?  @relation(fields: [orderId], references: [id], onDelete: Cascade)

  items CartHistoryItem[]

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?
}

model CartHistoryItem {
  id              String @id @default(uuid())
  quantity        Int
  priceAtPurchase Float?

  cartHistoryId String
  cartHistory   CartHistory @relation(fields: [cartHistoryId], references: [id], onDelete: Cascade)

  variantColorPackPriceId String
  variantColorPackPrice   VariantColorPackPrice @relation(fields: [variantColorPackPriceId], references: [id], onDelete: Cascade)

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?
}

///////////////////////
// ORDERS
///////////////////////
model Order {
  id          String @id @default(uuid())
  totalAmount Float
  status      String @default("PENDING")

  userId  String?
  user    User?   @relation(fields: [userId], references: [id], onDelete: Cascade)
  guestId String?

  shippingName    String
  shippingAddress String
  shippingPhone   String
  paymentMethod   String?
  transactionId   String?
  paidAt          DateTime?

  items         OrderItem[]
  cartHistories CartHistory[]

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?
}

model OrderItem {
  id              String @id @default(uuid())
  quantity        Int
  priceAtPurchase Float

  orderId String
  order   Order  @relation(fields: [orderId], references: [id], onDelete: Cascade)

  variantColorPackPriceId String
  variantColorPackPrice   VariantColorPackPrice @relation(fields: [variantColorPackPriceId], references: [id], onDelete: Cascade)

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?
}
