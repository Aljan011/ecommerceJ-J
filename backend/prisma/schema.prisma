generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

///////////////////////
// USERS
///////////////////////
model User {
  id          String   @id @default(uuid())
  name        String?
  email       String?  @unique
  password    String?
  loginMethod String   @default("NORMAL")
  userType    String   @default("USER")
  role        String   @default("USER")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  deletedAt DateTime?

  cartItems     CartItem[]
  cartHistories CartHistory[]
  orders        Order[]
}

///////////////////////
// GUEST USERS
///////////////////////
model GuestUser {
  id String @id

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  deletedAt DateTime?

  cartItems CartItem[]
}

///////////////////////
// CATEGORIES
///////////////////////
model Category {
  id          String   @id @default(uuid())
  name        String   @unique
  description String
  imageUrl    String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  deletedAt DateTime?

  products Product[]
}

///////////////////////
// PRODUCTS
///////////////////////
model Product {
  id          String   @id @default(uuid())
  name        String
  description String?
  imageUrl    String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  deletedAt DateTime?

  categoryId String
  category   Category @relation(fields: [categoryId], references: [id], onDelete: Cascade)

  variants Variant[]
}

///////////////////////
// VARIANTS (logical option only)
///////////////////////
model Variant {
  id   String @id @default(uuid())
  name String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  deletedAt DateTime?

  productId String
  product   Product @relation(fields: [productId], references: [id], onDelete: Cascade)

  colors VariantColor[]
}

///////////////////////
// COLORS
///////////////////////
model Color {
  id        String   @id @default(uuid())
  name      String
  hex       String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  variants VariantColor[]
}

///////////////////////
// VARIANT COLORS (SELLABLE SKU)
///////////////////////
model VariantColor {
  id String @id @default(uuid())

  price Float
  stock Int @default(0)

  variantId String
  variant   Variant @relation(fields: [variantId], references: [id], onDelete: Cascade)

  colorId String
  color   Color @relation(fields: [colorId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  deletedAt DateTime?

  cartItems        CartItem[]
  orderItems       OrderItem[]
  cartHistoryItems CartHistoryItem[]

  @@unique([variantId, colorId])
}

///////////////////////
// CART ITEMS
///////////////////////
model CartItem {
  id              String   @id @default(uuid())
  quantity        Int      @default(1)
  priceAtPurchase Float?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  deletedAt DateTime?

  userId String?
  user   User? @relation(fields: [userId], references: [id], onDelete: Cascade)

  guestId String?
  guest   GuestUser? @relation(fields: [guestId], references: [id], onDelete: Cascade)

  variantColorId String
  variantColor   VariantColor @relation(fields: [variantColorId], references: [id], onDelete: Cascade)

  @@unique([userId, variantColorId])
  @@unique([guestId, variantColorId])
}

///////////////////////
// CART HISTORY
///////////////////////
model CartHistory {
  id     String @id @default(uuid())
  status String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  deletedAt DateTime?

  userId String?
  user   User? @relation(fields: [userId], references: [id], onDelete: Cascade)

  guestId String?

  orderId String?
  order   Order? @relation(fields: [orderId], references: [id], onDelete: Cascade)

  items CartHistoryItem[]
}

model CartHistoryItem {
  id              String @id @default(uuid())
  quantity        Int
  priceAtPurchase Float?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  deletedAt DateTime?

  cartHistoryId String
  cartHistory   CartHistory @relation(fields: [cartHistoryId], references: [id], onDelete: Cascade)

  variantColorId String
  variantColor   VariantColor @relation(fields: [variantColorId], references: [id], onDelete: Cascade)
}

///////////////////////
// ORDERS
///////////////////////
model Order {
  id          String @id @default(uuid())
  totalAmount Float
  status      String @default("PENDING")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  deletedAt DateTime?

  userId String?
  user   User? @relation(fields: [userId], references: [id], onDelete: Cascade)

  guestId String?

  shippingName    String
  shippingAddress String
  shippingPhone   String

  paymentMethod String?
  transactionId String?
  paidAt        DateTime?

  items         OrderItem[]
  cartHistories CartHistory[]
}

///////////////////////
// ORDER ITEMS
///////////////////////
model OrderItem {
  id              String @id @default(uuid())
  quantity        Int
  priceAtPurchase Float

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  deletedAt DateTime?

  orderId String
  order   Order @relation(fields: [orderId], references: [id], onDelete: Cascade)

  variantColorId String
  variantColor   VariantColor @relation(fields: [variantColorId], references: [id], onDelete: Cascade)
}
